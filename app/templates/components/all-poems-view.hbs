
<div class="haiku">
  <h4>{{poem.title}}</h4>
  <h5>{{poem.firstline}}</h5>
  <h5>{{poem.secondline}}</h5>
  <h5>{{poem.thirdline}}</h5>
<br>
  <button type="button" class="btn btn-danger btn-sm" {{action 'deletePoem'}}>Delete</button>

    {{#link-to 'poem-edit' poem}}<button type="button" class="btn btn-info btn-sm">Edit</button>{{/link-to}}

    <button type="button" class="btn btn-info btn-sm" {{action 'publish'}}>Publish</button>


    {{#if poem.title}}
  <button type="button" class="btn btn-secondary btn-sm"><a href="mailto:?subject=My%20Haiku%20~%20{{poem.title}}&amp;body={{poem.title}}%0D%0A%0D%0A{{poem.firstline}}%0D%0A{{poem.secondline}}%0D%0A{{poem.thirdline}}%0D%0A%0D%0AI%20wrote%20this%20haiku%20at%20https://maggicorp.github.io/ember-capstone-maggie/">email</a></button>
    {{else}}

  <button type="button" class="btn btn-secondary btn-sm"><a href="mailto:?subject=My%20Haiku&amp;body=My%20Haiku%0D%0A%0D%0A{{poem.firstline}}%0D%0A{{poem.secondline}}%0D%0A{{poem.thirdline}}%0D%0A%0D%0AI%20wrote%20this%20haiku%20at%20https://maggicorp.github.io/ember-capstone-maggie/">email</a></button>
    {{/if}}
</div>
